<?xml version="1.0" encoding="utf-8"?>
<ROOT name="Maven项目周期">
    <PHASE name="创建项目">
        <PLUGINS>
            <PLUGIN name="maven-archetype-plugin">
                <GOALS>
                    <GOAL name="generate" desc="生成一个新项目"/>
                    <GOAL name="create-from-project" desc="从当前项目创建一个Maven项目" />
                </GOALS>
            </PLUGIN>
        </PLUGINS>
    </PHASE>
    <PHASE name="编译">
        <PLUGINS>
            <PLUGIN name="maven-compiler-plugin">
                <GOALS>
                    <GOAL name="compile" desc="编译源代码"></GOAL>
                    <GOAL name="testCompile" desc="编译测试代码"></GOAL>
                    <GOAL name="help" desc="显示插件帮助信息"></GOAL>
                </GOALS>
            </PLUGIN>
        </PLUGINS>
    </PHASE>
    <PHASE name="测试">
        <PLUGINS>
            <PLUGIN name="maven-test-plugin">
                <GOALS>
                    <GOAL name="test" />
                </GOALS>
            </PLUGIN>
        </PLUGINS>
    </PHASE>
    <PHASE name="打包">
        <PLUGINS>
            <PLUGIN name="maven-package-plugin">
                <GOALS>
                    <GOAL name="package" />
                    <GOAL name="package-site" />
                </GOALS>
            </PLUGIN>
        </PLUGINS>
    </PHASE>
    <PHASE name="安装">
        <PLUGINS>
            <PLUGIN name="maven-install-plugin">
                <GOALS>
                    <GOAL name="install" desc="将当前项目安装到本地仓库"/>
                    <GOAL name="install-file" desc="将一个文件安装到本地仓库"/>
                </GOALS>
            </PLUGIN>
        </PLUGINS>
    </PHASE>
</ROOT>
